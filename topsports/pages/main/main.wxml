<view style="z-index:0;width: 100%; height: 350px;"><scroll-view  scroll-y="true" style="z-index:0;width: 100%; height: 350px;position: fixed;background-color: rgb(255, 255, 255);text-align:center;padding-left:15%" bindtouchstart="touchstart"   bindtouchmove="touchmove">
<view style="background-color:#eeeeee;padding:5px;font-size:12px;">附近店铺</view>
<view bindtap="branchtab" wx:for="{{markers}}" wx:for-item="marker" wx:for-index="i" id="{{i}}" style="border-bottom:1px solid #eeeeee;font-size:12px;padding:10px">
<font wx:if="{{i==0}}" style="color:red;font-weight:900;border:1px solid red;border-radius:10px;padding:3px">近</font> ({{marker.BrandName}}){{marker.title}}   {{marker.juli}}米<br/>
<view style="font-size:12px;color:#888888;padding-top:5px">{{marker.address}}</view>
</view>
</scroll-view><map class="{{open?'open':''}}" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="12"  markers="{{markers}}" bindmarkertap="markertap"  show-location style="width: 100%; height: 350px;z-index:0;position: fixed;" controls="{{controls}}" bindcontroltap="controltap"></map></view>
<view class="center" style="padding-top:20px">
<button style="padding-left:120px;padding-right:120px;padding-top:3px;padding-bottom:3px;font-size:15px" type="primary" size="mini" loading="{{loading}}" disabled="{{disabled}}" bindtap="getlocation">{{btnname}}</button>
</view>
<view style="padding-top:30px;font-size:15px;color:#888888;padding-left:10px;align-items: flex-start ">品牌选择(多品为多品牌店，其他为品牌专卖店)<image src="../../images/左右滑动1.png" mode="widthFix" style="width:35px;margin-left:10px"></image>
</view>
<view style="display:flex;justify-content:center">
<scroll-view scroll-x="true" scroll-left="0" class="aa"  style="width:100%;display:flex;height: 80px;margin-top:0px;float:left;">
    <view style="width:640px;display:flex;height:80px;align-items:stretch;float:left">
            <view bindtap="brandclick" wx:for="{{pics}}" wx:for-item="i" style="width:40px;display:flex;padding:5px;float:left" id="{{i}}"><image src="../../images/{{i}}.png" mode="widthFix" style="width:40px;height:80px;"></image></view>
    </view>
</scroll-view>
</view>



